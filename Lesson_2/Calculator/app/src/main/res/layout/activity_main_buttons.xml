<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/first_button_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_linearlayout"
        app:layout_constraintBottom_toTopOf="@id/second_button_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1">

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_c"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_c" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_plus_minus"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_plus_minus" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_percent"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_percent" />

        <com.google.android.material.button.MaterialButton
            style="@style/Button.Operations"
            android:id="@+id/button_division"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_division" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_button_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_linearlayout"
        app:layout_constraintBottom_toTopOf="@+id/third_button_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_button_panel"
        app:layout_constraintVertical_weight="1">

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_7"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_7" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_8"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_8" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_9"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_9" />

        <com.google.android.material.button.MaterialButton
            style="@style/Button.Operations"
            android:id="@+id/button_X"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/x" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_button_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_linearlayout"
        app:layout_constraintBottom_toTopOf="@+id/fourth_button_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/second_button_panel"
        app:layout_constraintTop_toBottomOf="@id/second_button_panel"
        app:layout_constraintVertical_weight="1">

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_4"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_4" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_5"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_5" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_6"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_6"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Button.Operations"
            android:id="@+id/button_minus"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_minus" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_button_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_linearlayout"
        app:layout_constraintBottom_toTopOf="@+id/fifth_button_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/third_button_panel"
        app:layout_constraintTop_toBottomOf="@id/third_button_panel"
        app:layout_constraintVertical_weight="1">

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_1"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_2"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_2" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_3"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_3" />

        <com.google.android.material.button.MaterialButton
            style="@style/Button.Operations"
            android:id="@+id/button_plus"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_plus" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_button_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_linearlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/fourth_button_panel"
        app:layout_constraintTop_toBottomOf="@id/fourth_button_panel"
        app:layout_constraintVertical_weight="1">

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_0"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="2.015"
            android:text="@string/_0" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material.Buttons"
            android:id="@+id/button_point"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_point" />

        <com.google.android.material.button.MaterialButton
            style="@style/Button.Operations"
            android:id="@+id/button_equally"
            android:layout_width="@dimen/width_buttons"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_equally" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>