<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <com.google.android.material.button.MaterialButton
        style="@style/Choose.Light.Mode"
        android:id="@+id/light_mode"
        android:layout_width="@dimen/width_buttons"
        android:layout_height="@dimen/height_linearlayout"
        android:text="@string/light_mode"
        app:layout_constraintBottom_toTopOf="@id/dark_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1" />

    <com.google.android.material.button.MaterialButton
        style="@style/Choose.Dark.Mode"
        android:id="@+id/dark_mode"
        android:layout_width="@dimen/width_buttons"
        android:layout_height="@dimen/height_linearlayout"
        android:text="@string/night_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/light_mode"
        app:layout_constraintVertical_weight="1" />
</androidx.constraintlayout.widget.ConstraintLayout>